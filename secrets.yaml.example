# Secrets file for Hartmann Heat Pump ESPHome Integration
# Copy this file to secrets.yaml and update with your actual values

# WiFi Configuration
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# ESPHome API Configuration
hartmann_api_key: "your-32-character-api-encryption-key"

# OTA (Over-The-Air) Update Password
hartmann_ota_password: "your-ota-password"

# Fallback WiFi Hotspot Password (for emergency access)
hartmann_fallback_password: "your-fallback-password"

# Modbus Configuration (adjust if needed)
modbus_heat_pump_address: "0x01"  # Default Modbus address for Hartmann heat pump
baud_rate: "9600"                 # Default baud rate for Modbus communication

# Safety Configuration
safe_mode_delay: "600s"          # Delay before entering safe mode when HA disconnected
default_target_temp_heating: "21" # Default heating target temperature in safe mode
default_target_temp_cooling: "24" # Default cooling target temperature in safe mode